// Azure SQL Database用 Prisma schema
// 本番環境ではこのファイルを schema.prisma として使用

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// ユーザー（メンバー）
model User {
  id              String    @id @default(cuid())
  lineId          String?   @unique // LINE User ID
  name            String?   // NextAuth標準フィールド
  email           String?   @unique // NextAuth標準フィールド
  emailVerified   DateTime? // NextAuth標準フィールド
  image           String?   @db.NVarChar(500) // NextAuth標準フィールド（プロフィール画像URL）
  nickname        String    @default("名無し") // ニックネーム（公開）
  firstName       String?   // 名（非公開）
  lastName        String?   // 姓（非公開）
  gender          String?   // 性別: male / female
  age             Int?      // 年齢
  ageVisible      Boolean   @default(true) // 年齢を公開するか
  profileImageUrl String?   @db.NVarChar(500) // プロフィール画像URL（後方互換性）
  comment         String?   @db.NVarChar(1000) // その他コメント
  role            String    @default("guest") // admin / subadmin / member / visitor / guest
  lastActiveAt    DateTime? // 最終操作日時

  // 管理者専用フィールド（一般ユーザーには見えない）
  skillLevel      Int?      // スキルレベル: 1-10
  adminNote       String?   @db.NVarChar(2000) // 管理者メモ

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // リレーション
  attendances     Attendance[]
  attendanceHistories AttendanceHistory[]
  createdEvents   Event[]      @relation("EventCreator")
  sentMessages    Message[]    @relation("MessageSender")

  // NextAuth用
  accounts        Account[]
  sessions        Session[]
}

// NextAuth Account
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.NVarChar(Max)
  access_token      String? @db.NVarChar(Max)
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.NVarChar(Max)
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth Session
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth VerificationToken
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// イベント
model Event {
  id              String    @id @default(cuid())
  title           String    // イベント名
  description     String?   @db.NVarChar(2000) // 説明
  eventDate       DateTime  // 開催日時
  eventEndDate    DateTime? // 終了日時（任意）
  location        String?   // 場所
  capacity        Int?      // 定員（nullなら無制限）
  fee             Int?      // 参加費（nullなら非表示）
  feeVisible      Boolean   @default(false) // 参加費を表示するか
  deadline        DateTime? // 締め切り日時
  deadlineEnabled Boolean   @default(false) // 締め切りを有効にするか
  createdById     String    // 作成者
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // リレーション
  createdBy       User         @relation("EventCreator", fields: [createdById], references: [id])
  attendances     Attendance[]
  attendanceHistories AttendanceHistory[]
  messages        Message[]
}

// 出欠
model Attendance {
  id          String   @id @default(cuid())
  userId      String
  eventId     String
  status      String   // attending / not_attending / waitlist
  comment     String?  @db.NVarChar(500) // コメント
  position    Int?     // キャンセル待ち順（waitlistの場合）
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // リレーション（SQL Server循環参照対策: userはNoAction）
  user        User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
}

// 出欠回答履歴（変更のたびに記録）
model AttendanceHistory {
  id          String   @id @default(cuid())
  userId      String
  eventId     String
  status      String   // attending / not_attending / waitlist / cancelled
  comment     String?  @db.NVarChar(500) // コメント
  changedAt   DateTime @default(now()) // 変更日時

  // リレーション（SQL Server循環参照対策: userはNoAction）
  user        User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventId])
  @@index([changedAt])
}

// メッセージ（対象者へのメッセージ送信用）
model Message {
  id          String   @id @default(cuid())
  eventId     String
  senderId    String
  targetType  String   // all / attending / not_attending / no_response
  content     String   @db.NVarChar(2000)
  sentAt      DateTime @default(now())

  // リレーション（SQL Server循環参照対策: senderはNoAction）
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  sender      User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
